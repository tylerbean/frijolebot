# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Discord Channels to Monitor (add as many as needed)
DISCORD_CHANNEL_GENERAL=your_general_channel_id_here
DISCORD_CHANNEL_LINKS=your_links_channel_id_here
DISCORD_CHANNEL_INFRA_ALERTS=your_infra_alerts_channel_id_here

# Baserow Configuration
BASEROW_API_TOKEN=your_baserow_api_token_here
BASEROW_API_URL=https://api.baserow.frijole.lol/api/database/rows/table/
BASEROW_LINKS_TABLE_ID=42
BASEROW_DM_MAPPING_TABLE_ID=43

# WhatsApp Integration (Required if WHATSAPP_ENABLED=true)
WHATSAPP_ENABLED=false
WHATSAPP_SESSION_ENCRYPTION_KEY=your_32_character_encryption_key_here
BASEROW_WHATSAPP_SESSIONS_TABLE_ID=45
BASEROW_WHATSAPP_CHATS_TABLE_ID=44
BASEROW_WHATSAPP_MESSAGES_TABLE_ID=46
WHATSAPP_STORE_MESSAGES=false

# Application Configuration
NODE_ENV=development
HEALTH_CHECK_PORT=3000
TIMEZONE=America/Chicago

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_CLEANUP_INTERVAL=300000
